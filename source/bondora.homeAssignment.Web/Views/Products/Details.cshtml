@model bondora.homeAssignment.Models.Contracts.Cart.CartItemContract

@{
    ViewData["Title"] = Model.Product.Name;
}

<h1>@Model.Product.Name</h1>

<div>
    <h4>@Model.Product.Category.Name</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Product.Image" alt="@Model.Product.Name" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <form asp-controller="Cart" asp-action="Create">
                <input type="hidden" name="ProductId" value="@Model.Product.Id" />
                <div class="form-group">
                    <label for="Duration">Rent duration:</label>
                    <input class="form-control" type="number" name="Duration" asp-for="Duration" style="max-width:6em; display:inline" /> days
                    @Html.ValidationMessageFor(model => model.Duration)
                </div>
                <button type="submit" class="btn btn-primary">Add to cart</button>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to catalog</a>
</div>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}