@model IEnumerable<bondora.homeAssignment.Models.DTO.ProductContract>

@{
    ViewData["Title"] = "Catalog";
}

<h1>Catalog</h1>


@foreach (var itemRow in Model.Select((i, index) => (i, index)).GroupBy(a => a.index / 4))
{
    <div class="row">
        @foreach(var item in itemRow.Select(a=>a.i)) {
        <div class="col-md-3">
            <div class="card">
                <img src="@item.Image" class="card-img-top preview-image" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Category.Name</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Rent</a>
                </div>
            </div>
        </div>
        }
    </div>
}
